<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2DFD2">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/toolbar"
        android:background="@color/toolbar"
        app:logo="@drawable/outline_table_bar_24"
        app:title="Dineout"
        app:titleMarginStart="30dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click on the question that you want to ask...."
        android:textColor="@color/black"
        android:id="@+id/helptext"
        android:textSize="20dp"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/que1"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/helptext"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How do I make a reservation?"
            android:textSize="17dp"
            android:paddingTop="6dp"
            android:textColor="@color/black"
            android:paddingLeft="6dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="350dp"
        android:id="@+id/ans1"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_below="@id/que1"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/que2"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ans1"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Can I modify or cancle my reservation?"
            android:textSize="17dp"
            android:paddingTop="6dp"
            android:textColor="@color/black"
            android:paddingLeft="6dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="350dp"
        android:id="@+id/ans2"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_below="@id/que2"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/que3"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ans2"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Can I make a reservation for any event?"
            android:textSize="17dp"
            android:paddingTop="6dp"
            android:textColor="@color/black"
            android:paddingLeft="6dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="350dp"
        android:id="@+id/ans3"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_below="@id/que3"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/que4"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ans3"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How do I contact the restaurent directly?"
            android:textSize="17dp"
            android:paddingTop="6dp"
            android:textColor="@color/black"
            android:paddingLeft="6dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="350dp"
        android:id="@+id/ans4"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_below="@id/que4"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"/>

</RelativeLayout>