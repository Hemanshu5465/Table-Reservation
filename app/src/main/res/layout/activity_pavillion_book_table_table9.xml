<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2DFD2">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/toolbar"
        android:background="@color/toolbar"
        app:logo="@drawable/outline_table_bar_24"
        app:title="Dineout"
        app:titleMarginStart="30dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/pavillion_bookname9"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="   Enter your Name"
        android:textColorHint="#808080"
        android:inputType="text"
        android:textColor="@color/black"
        android:padding="10dp"
        android:background="@drawable/levender_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.176" />

    <EditText
        android:id="@+id/pavillion_bookday9"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="  Enter Day"
        android:textColorHint="#808080"
        android:focusable="false"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/black"
        android:background="@drawable/levender_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.328"
        android:layout_marginBottom="30dp"/>


    <EditText
        android:id="@+id/pavillion_booktime9"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint=" Enter Time"
        android:focusable="false"
        android:inputType="text"
        android:textColorHint="#808080"
        android:padding="10dp"
        android:textColor="@color/black"
        android:background="@drawable/levender_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.456" />

    <EditText
        android:id="@+id/pavillion_bookphone9"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="  Enter Phone No"
        android:inputType="text"
        android:textColorHint="#808080"
        android:padding="10dp"
        android:textColor="@color/black"
        android:background="@drawable/levender_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.603"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/pavillion_bookbtn9"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Book "
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.868"/>


</androidx.constraintlayout.widget.ConstraintLayout>