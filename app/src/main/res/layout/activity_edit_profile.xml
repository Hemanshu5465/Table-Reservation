<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/lr">

    <ImageView
        android:layout_width="215dp"
        android:layout_height="115dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="75dp"
        android:src="@drawable/logo"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Our place your joy"
        android:fontFamily="sans-serif-black"
        android:layout_marginRight="-7dp"
        android:gravity="center"
        android:layout_marginTop="110dp"
        android:textSize="18sp"
        android:textColor="#483C32"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit your Profile"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="240dp"
                android:textColor="#483C32"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/editName"
                android:background="@drawable/levender_border"
                android:backgroundTint="@color/white"
                android:layout_marginTop="320dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:padding="8dp"
                android:hint="Name"
                android:textColorHint="#808080"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/editEmail"
                android:background="@drawable/levender_border"
                android:backgroundTint="@color/white"
                android:layout_marginTop="380dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:padding="8dp"
                android:hint="Email"
                android:textColorHint="#808080"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/editUsername"
                android:background="@drawable/levender_border"
                android:backgroundTint="@color/white"
                android:layout_marginTop="440dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:padding="8dp"
                android:hint="Username"
                android:textColorHint="#808080"
                android:drawableLeft="@drawable/baseline_person_pin_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/editPassword"
                android:background="@drawable/levender_border"
                android:layout_marginTop="500dp"
                android:layout_marginLeft="40dp"
                android:backgroundTint="@color/white"
                android:layout_marginRight="40dp"
                android:padding="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#808080"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Save"
                android:id="@+id/saveButton"
                android:textSize="15sp"
                android:layout_marginTop="550dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:backgroundTint="#483C32"
                android:textColor="#E2DFD2"
                app:cornerRadius = "20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Delete"
        android:id="@+id/deletebutton"
        android:textSize="15sp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="#483C32"
        android:textColor="#E2DFD2"
        app:cornerRadius = "20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loginRedirectText"
                android:text=" *Alert : Youe can't change your username
                                * By clicking on DELETE your account will be delete permanently"
                android:gravity="center"
                android:layout_marginTop="650dp"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:textColor="#483C32"/>

        </RelativeLayout>
